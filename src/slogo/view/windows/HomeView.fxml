<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10"
  fx:controller="slogo.view.windows.Home" fx:id="HomePane">
  <Button GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" 
    GridPane.rowIndex="4"
    GridPane.rowSpan="1" fx:id="LaunchSlogo" prefHeight="40" prefWidth="150" text="Launch Slogo">
  </Button>
  <Button GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.halignment="CENTER"
    GridPane.rowIndex="8"
    GridPane.rowSpan="1" prefHeight="30" prefWidth="100"
    text="Color Scheme" fx:id="ColorScheme">
  </Button>
  <Button GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="8"
    GridPane.rowSpan="1"
    prefHeight="30" prefWidth="100" text="Language" fx:id="Language">
  </Button>
  <Button GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="9"
    GridPane.rowSpan="1"
    prefHeight="30" prefWidth="100" text="Defaults" fx:id="Defaults">
  </Button>
  <Button GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.halignment="CENTER"
    GridPane.rowIndex="9"
    GridPane.rowSpan="1" prefHeight="30" prefWidth="100"
    text="Help/Info" fx:id="Help">
  </Button>
  <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0"
    GridPane.rowSpan="1" text="Welcome to Slogo!">
    <font>
      <Font name="Arial" size="24"></Font>
    </font>
  </Label>
  <Label GridPane.columnIndex="0"
    GridPane.columnSpan="2" GridPane.halignment="CENTER"
    GridPane.rowIndex="1" GridPane.rowSpan="1"
    text="Created by: Alex Xu, Amjad Syedibrahim, Grant LoPresti, and Max Smith">
    <Font name="Arial" size="24"></Font>
  </Label>
  <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5"
    GridPane.rowSpan="1" text="">
    <font>
      <Font size="6"></Font>
    </font>
  </Label>
  <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"
    GridPane.rowIndex="6"
    GridPane.rowSpan="1" text="Visual Preferences &amp; Settings:">
    <font>
      <Font name="Arial" size="18"></Font>
    </font>
  </Label>
  <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7"
    GridPane.rowSpan="1" text="">
    <font>
      <Font size="2"></Font>
    </font>
  </Label>
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" maxWidth="Infinity" minWidth="200" prefWidth="200">
    </ColumnConstraints>
    <ColumnConstraints halignment="CENTER" maxWidth="Infinity" minWidth="200" prefWidth="200">
    </ColumnConstraints>
  </columnConstraints>
</GridPane>
